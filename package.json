{
    "name": "workspace-root",
    "version": "0.0.0",
    "keywords": [],
    "author": {
        "name": "Workleap"
    },
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-hopper.git"
    },
    "scripts": {
        "doc:start": "pnpm --filter=@apps/docs dev",
        "doc:storybook": "pnpm --filter=@apps/docs storybook",
        "doc:generate": "pnpm --filter=@apps/docs generate",
        "doc:lint": "pnpm --filter=@apps/docs lint",
        "dev:sample": "pnpm -r --filter=@samples/basic dev",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules turbo run test --continue",
        "test-storybook": "test-storybook",
        "build:doc": "turbo run build --filter=@apps/docs",
        "build:tokens": "turbo run build --filter=./packages/tokens",
        "build:pkg": "turbo run build --filter=./packages/*",
        "build:apps": "turbo run build --filter=./apps/*",
        "changeset": "changeset",
        "ci-release": "pnpm build:pkg && changeset publish",
        "install-react19": "pnpm -r --filter \"{packages/**}\" add -D react@19 react-dom@19 @types/react@19 @types/react-dom@19 && pnpm add -D -w react@19 react-dom@19 @types/react@19 @types/react-dom@19",
        "generate-icons": "pnpm --filter=\"svg-icons\" generate-icons && pnpm --filter=\"@hopper-ui/icons*\" generate-icons",
        "lint": "turbo run lint --continue",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint --ignore-pattern packages --ignore-pattern apps",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "storybook": "storybook dev -p 6006",
        "storybook-nolazy": "cross-env STORYBOOK_NO_LAZY=true pnpm run storybook",
        "build-storybook": "storybook build",
        "list-outdated-deps": "pnpm outdated -r --format list \"!eslint\" \"!@types/eslint\" \"!style-dictionary\" \"!react-router-dom\" \"!next\" \"!eslint-config-next\"",
        "update-outdated-deps": "pnpm update -r --latest \"!eslint\" \"!@types/eslint\" \"!style-dictionary\" \"!react-router-dom\" \"!next\" \"!eslint-config-next\"",
        "plop": "plop",
        "find-types": "pnpm --filter=components find-types"
    },
    "devDependencies": {
        "@changesets/cli": "2.28.1",
        "@chromatic-com/storybook": "3.2.6",
        "@hopper-ui/tokens": "workspace:*",
        "@internals/eslint-plugin-hopper-monorepo": "workspace:*",
        "@internationalized/string-compiler": "3.2.6",
        "@netlify/plugin-nextjs": "5.10.2",
        "@pmmmwh/react-refresh-webpack-plugin": "0.5.16",
        "@storybook/addon-a11y": "8.6.12",
        "@storybook/addon-essentials": "8.6.12",
        "@storybook/addon-interactions": "8.6.12",
        "@storybook/addon-links": "8.6.12",
        "@storybook/addon-mdx-gfm": "8.6.12",
        "@storybook/addon-webpack5-compiler-swc": "1.0.5",
        "@storybook/blocks": "8.6.12",
        "@storybook/react": "8.6.12",
        "@storybook/react-webpack5": "8.6.12",
        "@storybook/test": "8.6.12",
        "@storybook/test-runner": "0.22.0",
        "@storybook/types": "8.6.12",
        "@types/eslint": "8.56.12",
        "@types/jest": "29.5.14",
        "@types/node": "22.14.0",
        "@types/react": "18.3.13",
        "@workleap/eslint-plugin": "3.3.2",
        "@workleap/stylelint-configs": "2.0.5",
        "@workleap/typescript-configs": "3.0.3",
        "axe-playwright": "2.1.0",
        "cross-env": "7.0.3",
        "eslint": "8.57.1",
        "eslint-plugin-storybook": "0.12.0",
        "jest": "29.7.0",
        "plop": "4.0.1",
        "prettier": "3.5.3",
        "prop-types": "15.8.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-hook-form": "7.55.0",
        "react-refresh": "0.17.0",
        "react-router-dom": "6.27.0",
        "storybook": "8.6.12",
        "stylelint": "16.17.0",
        "stylelint-config-clean-order": "6.1.0",
        "stylelint-use-logical": "2.1.2",
        "syncpack": "13.0.3",
        "ts-jest": "29.3.1",
        "ts-node": "10.9.2",
        "tsconfig-paths-webpack-plugin": "4.2.0",
        "tsx": "4.19.3",
        "turbo": "2.4.4"
    },
    "resolutions": {
        "eslint-plugin-react-hooks": "4.6.2"
    },
    "bugs": {
        "url": "https://github.com/workleap/wl-hopper/issues"
    },
    "homepage": "https://github.com/workleap/wl-hopper#readme",
    "packageManager": "pnpm@10.0.0"
}
