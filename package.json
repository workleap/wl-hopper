{
    "name": "wl-hopper",
    "description": "A React component library that provides accessible, customizable, and production-ready UI components.",
    "version": "0.0.0",
    "author": {
        "name": "Workleap"
    },
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-hopper.git"
    },
    "scripts": {
        "doc:start": "pnpm --filter=docs dev",
        "doc:generate": "pnpm --filter=docs generate",
        "doc:lint": "pnpm --filter=docs eslint",
        "dev:basic": "pnpm -r --filter=basic dev",
        "dev:mcp": "pnpm -r --filter=mcp-server dev",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules turbo run test --continue",
        "test-storybook": "test-storybook",
        "build:doc": "turbo run build --filter=./apps/docs",
        "build:ai-docs": "pnpm doc:backup-packages && pnpm doc:install-react19 && pnpm --filter=docs build:ai-docs && pnpm doc:restore-packages",
        "doc:backup-packages": "shx cp apps/docs/package.json apps/docs/package.json.backup && shx cp pnpm-lock.yaml pnpm-lock.yaml.backup",
        "doc:restore-packages": "mv apps/docs/package.json.backup apps/docs/package.json && mv pnpm-lock.yaml.backup pnpm-lock.yaml && pnpm install",
        "doc:install-react19": "pnpm -r --filter=docs add react@19 react-dom@19 && pnpm -r --filter=docs add -D @types/react@19 @types/react-dom@19",
        "build:mcp": "pnpm --filter=./apps/mcp-server build",
        "build:tokens": "turbo run build --filter=./packages/tokens",
        "build:pkg": "turbo run build --filter=./packages/*",
        "build:apps": "turbo run build --filter=./apps/samples/*",
        "changeset": "changeset",
        "ci-release": "pnpm build:pkg && changeset publish",
        "install-react19": "pnpm -r --filter \"{packages/**}\" add -D react@19 react-dom@19 @types/react@19 @types/react-dom@19 && pnpm add -D -w react@19 react-dom@19 @types/react@19 @types/react-dom@19",
        "generate-icons": "pnpm --filter=\"svg-icons\" generate-icons && pnpm --filter=\"@hopper-ui/icons*\" generate-icons",
        "lint": "turbo run eslint stylelint typecheck syncpack --continue",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "syncpack": "syncpack lint",
        "typecheck": "tsc",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "storybook": "storybook dev -p 6006",
        "storybook-nolazy": "cross-env STORYBOOK_NO_LAZY=true pnpm run storybook",
        "build-storybook": "storybook build",
        "list-outdated-deps": "pnpm outdated -r --format list !style-dictionary !react !@types/react !react-dom !@types/react-dom !next !jest !@types/jest !ts-jest !typescript !react-test-renderer !@types/react-test-renderer !@types/node !@testing-library/jest-dom",
        "update-outdated-deps": "pnpm update -r --latest !style-dictionary !react !@types/react !react-dom !@types/react-dom !next !jest !@types/jest !ts-jest !typescript !react-test-renderer !@types/react-test-renderer !@types/node !@testing-library/jest-dom",
        "update-react-aria-deps": "pnpm update -r react-aria react-aria-components @react-aria/* @react-stately/*",
        "plop": "plop",
        "find-types": "pnpm --filter=components find-types"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.7",
        "@chromatic-com/storybook": "4.0.0",
        "@eslint/js": "9.38.0",
        "@hopper-ui/tokens": "workspace:*",
        "@internationalized/string-compiler": "3.2.6",
        "@netlify/plugin-nextjs": "5.14.5",
        "@pmmmwh/react-refresh-webpack-plugin": "0.6.1",
        "@storybook/addon-a11y": "9.1.9",
        "@storybook/addon-docs": "9.1.9",
        "@storybook/addon-links": "9.1.9",
        "@storybook/addon-viewport": "9.0.8",
        "@storybook/addon-webpack5-compiler-swc": "4.0.1",
        "@storybook/react-webpack5": "9.1.9",
        "@storybook/test-runner": "0.23.0",
        "@swc/core": "1.13.5",
        "@testing-library/react": "16.3.0",
        "@types/eslint": "9.6.1",
        "@types/jest": "29.5.14",
        "@types/node": "24.5.1",
        "@types/react": "18.3.13",
        "@workleap/eslint-configs": "0.0.7",
        "@workleap/stylelint-configs": "2.1.6",
        "@workleap/swc-configs": "2.3.0",
        "@workleap/typescript-configs": "3.0.4",
        "axe-playwright": "2.2.2",
        "chromatic": "13.3.5",
        "cross-env": "10.1.0",
        "eslint": "9.38.0",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-storybook": "9.1.13",
        "jest": "29.7.0",
        "jest-resolve": "29.7.0",
        "plop": "4.0.4",
        "postcss": "8.5.6",
        "postcss-modules": "6.0.1",
        "prettier": "3.6.2",
        "prop-types": "15.8.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-hook-form": "7.63.0",
        "react-refresh": "0.17.0",
        "react-router-dom": "7.9.3",
        "shx": "0.4.0",
        "storybook": "9.1.9",
        "stylelint": "16.24.0",
        "stylelint-config-clean-order": "7.0.0",
        "stylelint-use-logical": "2.1.2",
        "syncpack": "13.0.4",
        "ts-jest": "29.4.5",
        "ts-node": "10.9.2",
        "tsconfig-paths-webpack-plugin": "4.2.0",
        "tsup": "8.5.0",
        "tsx": "4.20.6",
        "turbo": "2.5.8",
        "typescript-eslint": "8.46.2"
    },
    "bugs": {
        "url": "https://github.com/workleap/wl-hopper/issues"
    },
    "homepage": "https://github.com/workleap/wl-hopper#readme",
    "packageManager": "pnpm@10.19.0"
}
