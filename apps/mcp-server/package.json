{
  "name": "@hopper-ui/mcp-server",
  "version": "0.1.0",
  "private": true,
  "author": "Workleap",
  "description": "MCP server for Hopper UI development",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "index": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "prebuild": "rm -rf ./src/.docs && cp -r ../docs/dist/ai-docs ./src/.docs",
    "postbuild": "rm -rf dist/hosts/netlify/docs && cp -r ./src/.docs dist/hosts/netlify/docs",
    "start:expressJs": "NODE_ENV=production node dist/hosts/expressJs.js",
    "netlify": "pnpm --package=netlify-cli dlx netlify",
    "dev:server:expressJs": "nodemon --watch src --ext ts --exec \"tsx src/hosts/expressJs.ts\"",
    "dev:server:netlify": "IS_NETLIFY_FUNCTION=true pnpm netlify dev",
    "dev:inspect:expressJs": "DANGEROUSLY_OMIT_AUTH=true pnpx @modelcontextprotocol/inspector@latest http://localhost:3300/mcp",
    "dev:inspect:netlify": "DANGEROUSLY_OMIT_AUTH=true pnpx @modelcontextprotocol/inspector@latest http://localhost:8888/mcp",
    "dev:expressJs": "turbo run build dev:server:expressJs dev:inspect:expressJs --continue",
    "dev:netlify": "turbo run build dev:server:netlify dev:inspect:netlify --continue",
    "dev": "pnpm dev:netlify",
    "test": "jest"
  },
  "keywords": [],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.3",
    "@typescript-eslint/parser": "8.17.0",
    "@workleap/logging": "^1.0.0",
    "express": "5.1.0",
    "fetch-to-node": "2.1.0"
  },
  "devDependencies": {
    "@swc/core": "1.10.0",
    "@swc/helpers": "0.5.15",
    "@swc/jest": "0.2.37",
    "@testing-library/jest-dom": "6.6.3",
    "@types/express": "5.0.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.1",
    "@typescript-eslint/types": "8.39.0",
    "@workleap/eslint-plugin": "3.2.3",
    "@workleap/swc-configs": "2.2.3",
    "@workleap/typescript-configs": "3.0.2",
    "eslint": "8.57.1",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "rehype-remark": "10.0.1",
    "remark": "15.0.1",
    "ts-jest": "29.2.5",
    "tsx": "4.19.2",
    "typescript": "5.5.4",
    "unist-util-visit": "5.0.0"
  }
}
