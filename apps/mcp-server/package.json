{
  "name": "@hopper-ui/dev-mcp",
  "version": "0.1.0",
  "author": "Workleap",
  "description": "MCP server for Hopper UI development",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hopper-dev-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "rm -rf dist/docs && cp -r ../docs/dist/ai dist/docs && rm -rf dist/hosts/netlify/docs && cp -r ../docs/dist/ai dist/hosts/netlify/docs",
    "start:expressJs": "NODE_ENV=production node dist/hosts/expressJs.js",
    "dev:expressJs": "nodemon --watch src --ext ts --exec \"tsx src/hosts/expressJs.ts\"",
    "dev:netlify": "IS_NETLIFY_FUNCTION=true pnpm netlify dev",
    "inspect:expressJs": "pnpx @modelcontextprotocol/inspector http://localhost:3300/mcp",
    "inspect:netlify": "pnpx @modelcontextprotocol/inspector http://localhost:8888/mcp",
    "devUI:expressJs": "turbo run dev:expressJs inspect:expressJs --continue",
    "devUI:netlify": "turbo run build dev:netlify inspect:netlify --continue",
    "dev": "pnpm devUI:netlify"

  },
  "keywords": [],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.16.0",
    "@netlify/functions": "^4.2.1",
    "chalk": "^5.4.1",
    "express": "5.1.0",
    "fetch-to-node": "^2.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/node": "22.10.1",
    "@types/winston": "^2.4.4",
    "@workleap/typescript-configs": "3.0.4",
    "netlify-cli": "^23.0.0",
    "nodemon": "3.1.10",
    "rehype-remark": "^10.0.1",
    "remark": "^15.0.1",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "unist-util-visit": "5.0.0"
  }
}
