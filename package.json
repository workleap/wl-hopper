{
    "name": "wl-hopper",
    "version": "0.0.0",
    "keywords": [],
    "author": {
        "name": "Workleap"
    },
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-hopper.git"
    },
    "scripts": {
        "doc:start": "pnpm --filter=docs dev",
        "doc:generate": "pnpm --filter=docs generate",
        "doc:lint": "pnpm --filter=docs lint",
        "dev:basic": "pnpm -r --filter=basic dev",
        "dev:mcp": "pnpm -r --filter=mcp-server dev",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules turbo run test --continue",
        "test-storybook": "test-storybook",
        "build:doc": "turbo run build --filter=./apps/docs",
        "build:ai-docs": "pnpm doc:backup-packages && pnpm doc:install-react19 && pnpm --filter=docs build:ai-docs && pnpm doc:restore-packages",
        "doc:backup-packages": "cp apps/docs/package.json apps/docs/package.json.backup && cp pnpm-lock.yaml pnpm-lock.yaml.backup",
        "doc:restore-packages": "mv apps/docs/package.json.backup apps/docs/package.json && mv pnpm-lock.yaml.backup pnpm-lock.yaml && pnpm install",
        "doc:install-react19": "pnpm -r --filter=docs add react@19 react-dom@19 && pnpm -r --filter=docs add -D @types/react@19 @types/react-dom@19",
        "build:mcp": "pnpm --filter=./apps/mcp-server build",
        "build:tokens": "turbo run build --filter=./packages/tokens",
        "build:pkg": "turbo run build --filter=./packages/*",
        "build:apps": "turbo run build --filter=./apps/samples/*",
        "changeset": "changeset",
        "ci-release": "pnpm build:pkg && changeset publish",
        "install-react19": "pnpm -r --filter \"{packages/**}\" add -D react@19 react-dom@19 @types/react@19 @types/react-dom@19 && pnpm add -D -w react@19 react-dom@19 @types/react@19 @types/react-dom@19",
        "generate-icons": "pnpm --filter=\"svg-icons\" generate-icons && pnpm --filter=\"@hopper-ui/icons*\" generate-icons",
        "lint": "turbo run lint --continue",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint --ignore-pattern packages --ignore-pattern apps",
        "typecheck": "tsc",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "storybook": "storybook dev -p 6006",
        "storybook-nolazy": "cross-env STORYBOOK_NO_LAZY=true pnpm run storybook",
        "build-storybook": "storybook build",
        "list-outdated-deps": "pnpm outdated -r --format list \"!eslint\" \"!@types/eslint\" \"!style-dictionary\" \"!react\" \"!@types/react\" \"!react-dom\" \"!@types/react-dom\" \"!react-router-dom\" \"!next\" \"!eslint-config-next\" \"!@netlify/plugin-nextjs\" \"!svgo\" \"!shiki\" \"!logrocket\"",
        "update-outdated-deps": "pnpm update -r --latest \"!eslint\" \"!@types/eslint\" \"!style-dictionary\" \"!react\" \"!@types/react\" \"!react-dom\" \"!@types/react-dom\" \"!react-router-dom\" \"!next\" \"!eslint-config-next\" \"!@netlify/plugin-nextjs\" \"!svgo\" \"!shiki\" \"!logrocket\"",
        "update-react-aria-deps": "pnpm update -r react-aria react-aria-components @react-aria/* @react-stately/*",
        "plop": "plop",
        "find-types": "pnpm --filter=components find-types"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.7",
        "@chromatic-com/storybook": "^4.0.0",
        "@hopper-ui/tokens": "workspace:*",
        "@internationalized/string-compiler": "3.2.6",
        "@netlify/plugin-nextjs": "5.9.0",
        "@pmmmwh/react-refresh-webpack-plugin": "0.5.15",
        "@storybook/addon-a11y": "^9.1.6",
        "@storybook/addon-docs": "^9.1.6",
        "@storybook/addon-links": "^9.1.6",
        "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
        "@storybook/react-webpack5": "^9.1.6",
        "@storybook/test-runner": "0.23.0",
        "@types/eslint": "8.56.12",
        "@types/jest": "30.0.0",
        "@types/node": "22.10.1",
        "@types/react": "18.3.13",
        "@workleap/eslint-plugin": "3.2.3",
        "@workleap/stylelint-configs": "2.1.0",
        "@workleap/typescript-configs": "3.0.2",
        "axe-playwright": "2.2.2",
        "cross-env": "7.0.3",
        "eslint": "8.57.1",
        "eslint-plugin-hopper-monorepo": "workspace:*",
        "eslint-plugin-storybook": "^9.1.6",
        "jest": "30.1.3",
        "plop": "4.0.2",
        "prettier": "^3.6.2",
        "prop-types": "15.8.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-hook-form": "7.62.0",
        "react-refresh": "0.17.0",
        "react-router-dom": "6.27.0",
        "storybook": "^9.1.6",
        "stylelint": "16.24.0",
        "stylelint-config-clean-order": "6.1.0",
        "stylelint-use-logical": "2.1.2",
        "ts-jest": "29.4.2",
        "ts-node": "10.9.2",
        "tsconfig-paths-webpack-plugin": "4.2.0",
        "tsx": "4.19.2",
        "turbo": "2.5.6"
    },
    "resolutions": {
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-import": "2.31.0"
    },
    "bugs": {
        "url": "https://github.com/workleap/wl-hopper/issues"
    },
    "homepage": "https://github.com/workleap/wl-hopper#readme",
    "packageManager": "pnpm@10.0.0"
}
